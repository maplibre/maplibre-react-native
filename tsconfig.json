{
  "compilerOptions": {
    "declaration": true,
    "preserveSymlinks": true,
    "target": "es6",
    "module": "es6",
    "lib": ["es6"],
    "allowJs": true,
    "jsx": "react-native",
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node", "react-native", "geojson"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
  },
  "include": [
    "javascript/**/*", "index.ts"
  ],
}

